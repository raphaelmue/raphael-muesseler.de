{
	"paths": {
		"/header": {
			"get": {
				"deprecated": false,
				"description": "Find the header record",
				"responses": {
					"200": {
						"description": "Retrieve header document(s)",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/Header"
								}
							}
						}
					}
				}
			}
		},
		"/header/locales": {
			"get": {
				"deprecated": false,
				"description": "",
				"responses": {
					"200": {
						"description": "Retrieve all locales",
						"content": {
							"application/json": {
								"schema": {
									"type": "array",
									"items": {
										"$ref": "#/components/schemas/Locale"
									}
								}
							}
						}
					}
				}
			}
		}
	},
	"components": {
		"schemas": {
			"Locale": {
				"required": [
					"id",
					"name",
					"code",
					"isDefault"
				],
				"properties": {
					"id": {
						"type": "integer"
					},
					"name": {
						"type": "string"
					},
					"code": {
						"type": "string"
					},
					"created_at": {
						"type": "string",
						"format": "date-time"
					},
					"updated_at": {
						"type": "string",
						"format": "date-time"
					},
					"isDefault": {
						"type": "boolean"
					}
				}
			}
		}
	}
}
